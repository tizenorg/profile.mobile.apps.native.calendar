<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<manifest xmlns="http://tizen.org/ns/packages" api-version="2.4" package="org.tizen.calendar" version="1.0.0">
    <profile name="mobile"/>
    <ui-application appid="org.tizen.calendar.pick" auto-restart="false" exec="calendar-pick" launch_mode="caller" multiple="false" nodisplay="true" taskmanage="false" type="capp">
        <label>Calendar Pick</label>
        <icon>calendar.png</icon>
        <app-control>
            <operation name="http://tizen.org/appcontrol/operation/pick"/>
            <mime name="application/vnd.tizen.calendar"/>
        </app-control>
    </ui-application>
    <privileges>
        <privilege>http://tizen.org/privilege/calendar.read</privilege>
        <privilege>http://tizen.org/privilege/notification</privilege>
        <privilege>http://tizen.org/privilege/calendar.write</privilege>
    </privileges>
    <feature name="http://tizen.org/feature/screen.size.all">true</feature>
</manifest>
